class Solution{
    public static int kthSmallest(int[] arr, int l, int r, int k) 
    { 
         PriorityQueue<Integer> queue =new PriorityQueue<>(Collections.reverseOrder());
         
         for(int i=0; i<arr.length;i++){
             queue.add(arr[i]);
             if(queue.size()>k){
                 queue.poll();
             }
         }
         return queue.peek();
    } 
}
